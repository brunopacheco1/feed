<?xml version="1.0" encoding="UTF-8"?>
<messaging-deployment xmlns="urn:jboss:messaging-deployment:1.0">
	<hornetq-server>
		<jms-destinations>
			<!-- QUEUE OF DOCUMENTS TO NORMALIZE -->
			<jms-queue name="${app.context}NormalizerQueue">
			    <entry name="queue/robot/normalizer/documents/${app.context}"/>
			    <entry name="java:jboss/queue/robot/normalizer/documents/${app.context}"/>
			</jms-queue>
			
			<!-- QUEUE OF SEED TO CRAWL -->
			<jms-queue name="${app.context}CrawlerQueue">
			    <entry name="queue/robot/crawler/seed/${app.context}"/>
			    <entry name="java:jboss/queue/robot/crawler/seed/${app.context}"/>
			</jms-queue>
		</jms-destinations>
	</hornetq-server>
</messaging-deployment>